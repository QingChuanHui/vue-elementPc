<script>
import { newsList } from '@/api/news'
import imageURL from '@/assets/logo.png'
import { List, PullRefresh } from 'vant'
import IsEmpty from '@/components/is-empty/'
import loadMore from '@/mixins/load-more'
export default {
  mixins: [loadMore],
  data() {
    return {
      imageURL: imageURL,
      list: [],
      refLoading: false, // 下拉刷新
      picIp: process.env.BASE_API
    }
  },
  mounted() {
    this.resetInit()
  },
  methods: {
    async initData() {
      const total = await newsList({ pageNo: this.pages.currPage, pageSize: this.pages.perPage, isShow: 1 }, true).then((ret) => {
        if (ret.page.records) {
          this.list.push(...ret.page.records)
        }
        return ret.page.total
      })
      return total
    },
    onRefresh() {
      this.resetInit()// 更新页数
      this.list = [] // 清空数据
      setTimeout(() => {
        this.refLoading = false
        if (this.list.length === 0) {
          this.loadMore()
        }
        this.$toast('刷新成功')
      }, 500)
    }
  },
  components: {
    [List.name]: List,
    [PullRefresh.name]: PullRefresh,
    IsEmpty
  }
}
</script>
