<script>
import { shopList } from '@/api/shop'
import { List, PullRefresh } from 'vant'
import IsEmpty from '@/components/is-empty/'
import loadMore from '@/mixins/load-more'
export default {
  mixins: [loadMore],
  data() {
    return {
      list: [],
      kindList: [],
      picIp: process.env.BASE_API,
      refLoading: false, // 下拉刷新
      cssH: {
        'min-height': (window.innerHeight - 140) + 'px'
      }
    }
  },
  mounted() {
    this.resetInit()
  },
  methods: {
    onClickLeft() {
      this.$router.go(-1)
    },
    async initData() {
      const total = await shopList({ pageNo: this.pages.currPage, pageSize: this.pages.perPage, selectType: 0 }, true).then((ret) => {
        if (ret.page.records) {
          this.list.push(...ret.page.records)
        }
        return ret.page.total
      })
      return total
    },
    onRefresh() {
      this.resetInit()// 更新页数
      this.list = [] // 清空数据
      setTimeout(() => {
        this.refLoading = false
        if (this.list.length === 0) {
          this.loadMore()
        }
        this.$toast('刷新成功')
      }, 500)
    }
  },
  components: {
    [List.name]: List,
    [PullRefresh.name]: PullRefresh,
    IsEmpty
  }
}
</script>
